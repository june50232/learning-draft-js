@require 'reset.styl'

body
  background: #000
  font-family: sans-serif

#app
  h1
    margin: 20px auto
    width: 80%
    color: #fff
    text-indent: -10px

.gakki-editor
  margin: 0 auto 50px
  padding: 10px
  width: 80%
  min-height: 300px
  background: #fff
  border-radius: 5px
  [data-block='true']
    position: relative
    &::after
      content: attr(data-offset-key)
      position: absolute
      right: 0
      top: 2px
      color: #ddd
      font-size: 10px

