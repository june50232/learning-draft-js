@require 'reset.styl'
@require 'link.styl'
@require 'tool.styl'

body
  background: #000
  font-family: Arial, sans-serif

h1
  margin: 20px auto
  width: 80%
  color: #fff
  text-indent: -10px
.btn
  width: 60px
  height: 25px
  line-height: @height
  font-size: 16px
  text-transform: uppercase
  background: #000
  color: #fff
  border: 1px solid #fff
  &:hover
    background: #555
  &.btn-right
    border-radius: 0 5px 5px 0
.select
  position: relative
  top: -2px
  width: 130px
  height: 25px
  border: 1px solid #fff
  outline: none
  line-height: @height
  &.select-left
    border-radius: 5px 0 0 5px

.gakki-editor
  position: relative
  margin: 0 auto 50px
  padding: 10px
  width: 80%
  min-height: 300px
  background: #fff
  border-radius: 5px
  .menu
    position: absolute
    top: -40px
    right: 0
  .titleEditor
    margin: 20px
    width: calc(100% - 40px)
    height: 35px
    font-size: 24px
    line-height: @height
    color: #333
    border: none
    border-bottom: 1px solid #ddd
  .DraftEditor-root
    margin: 0 20px
  [data-block='true']
    position: relative
    &::after
      content: attr(data-offset-key)
      position: absolute
      right: 0
      top: 2px
      color: #ddd
      font-size: 10px
  span[data-text='true']::selection
    background: #d9d9d9
