.link-editor
  position: absolute
  width: 140px
  height: 36px
  background: #222
  z-index: 10
  &::before
    content: ''
    position: absolute
    top: 100%
    left: 50%
    margin-left: -3px
    border-top: 3px solid #000
    border-left: 3px solid transparent
    border-right: @border-left
  &::after
    content: ''
    display: block
    position: absolute
    top: 100%
    left: 50%
    margin-left: -20px
    width: 40px
    height: 20px
    visibility: hidden
  input
    margin: 0 3px
    position: relative
    top: 0px
    width: 100px
    height: 28px
    line-height: @height
    border: none
    border-radius: 2px
    background: #444
    color: #fff
    text-indent: 5px
  a
    display: inline-block
    position: relative
    top: 3px
    width: 30px
    height: 30px
    line-height: @height
    font-size: 22px
    border-radius: 2px
    background: #555
    color: #fff
    text-align: center
    cursor: pointer
    
.link
  display: inline-block
  margin: 0 5px
  padding: 0 3px
  background: #ddd
  color: #233
  border-radius: 3px
  border-bottom: 1.5px solid #423
  text-decoration: none
  box-sizing: border-box
