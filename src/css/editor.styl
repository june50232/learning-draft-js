$blue=#39c

.others
  display: none
  margin: 0 auto
  padding: 20px
  width: 750px
  background: #eee
.gakki
  margin: 5em auto
  padding-bottom: .25em
  width: 960px
  border-bottom: 1px solid #ddd

.toolbar
  margin-bottom: 2em
  padding: .5em
  border: 1px solid #eee
  border-bottom: 3px solid $blue
  label
    float: right
    color: lighten($blue, 20%)
    line-height: 2.25
  button
    margin-right: 1em
    border: 1px solid $blue
    outline: none
    border-radius: 4px
    color: #39c
    background: #fff
    cursor: pointer
    &:active
      background: $blue
      color: #fff

.toc
  position: fixed
  display: table
  top: 100px
  left: 20px
  width: 100px
  padding: 1em
  border: 1px solid #eee
  li
    width: 80px
    line-height: 1
    margin: 5px
    padding: 10px
    list-style-type: none
    cursor: move
    border: 1px solid #ccc
    border-radius: 5px

.gu-transit
  opacity: .5
.gu-mirror
  position: fixed
  margin: 0!important
  text-indent: 10px
  line-height: 36px
  border-radius: 5px
  opacity: 0.8
  list-style-type: none
  background-color: rgba(0, 0, 0, 0.2)
  z-index: 9999 !important
  transition: opacity .3s ease-in-out
.gu-hide
  display: none !important
.gu-unselectable
  -webkit-user-select: none !important
  -moz-user-select: none !important
  -ms-user-select: none !important
  user-select: none !important

.public-DraftEditor-content
  [data-contents='true']>*
    position: relative
    &:after
      content: attr(data-offset-key)
      position: absolute
      right: 0
      top: 2px
      font-size: 10px
      color: #ddd
